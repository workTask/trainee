
<!-- Modal for button add note -->
<div class="modal fade" id="editModel_{{id}}" tabindex="-1" role="dialog" aria-labelledby="editModelLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <!--added form-->
      <form method="POST" action="/editNote">
          <div class="modal-header">
                <!--Title model-->
            <h5 class="modal-title" id="editModelLabel">Edit note</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
              <!--Body model-->
          <div class="modal-body">
             <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                <input type="text" class="form-control" name="nameNote" value="{{name}}">
                </div>
            </div> 
              <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Description</label>
                <div class="col-sm-10">
                  <textarea class="form-control" name="description" title="{{description}}">{{description}}</textarea>
                </div>
            </div> 
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-outline-success">Edit</button>
          </div>
      </form>
    </div>
  </div>
</div>